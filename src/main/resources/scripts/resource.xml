<Resource name="jdbc/mariadb" auth="Container" type="javax.sql.DataSource" driverClassName="cdata.jdbc.mariadb.MariaDBDriver" factory="org.apache.tomcat.jdbc.pool.DataSourceFactory" 
  url="jdbc:mariadb:User={{DATABASE_USER}};Password={{DATABASE_PASSWORD}};Database={{DATABASE_DBNAME}};Server={{DATABASE_HOST}};Port={{DATABASE_PORT}};" 
  maxActive="20" 
  maxIdle="10" 
  maxWait="-1" 
/>